// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id Int @id @default(autoincrement()) //아이디 역할 자동증가
  title String
  year Int
  genre String? //필수가 아니라는 뜻
  createdAt DateTime @default(now()) //기본값이 생성되는 순간임
  updatedAt DateTime @updatedAt // 업데이트되면 등장
}